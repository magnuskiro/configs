# sound control: up | down | mute
# https://wiki.archlinux.org/index.php/PulseAudio#Keyboard_volume_control
# Get the sink "alsa_outpu~" from tab completion of the command on cli.

# increase volume
bindsym $mod+$alt+Up exec \
pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo +5% && \
pactl set-sink-volume alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo +5% && \
pactl set-sink-volume bluez_sink.00_09_A7_24_41_14.a2dp_sink +5% 

# decrease volume
bindsym $mod+$alt+Down exec \
pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo -5% && \
pactl set-sink-volume alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo -5% && \
pactl set-sink-volume bluez_sink.00_09_A7_24_41_14.a2dp_sink -5%

# mute with alt+m -keys
bindsym $mod+$alt+m exec \
pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle && \
pactl set-sink-mute alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo toggle && \
pactl set-sink-mute bluez_sink.00_09_A7_24_41_14.a2dp_sink toggle

# mute with m key
bindsym $mod+m exec \
pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle && \
pactl set-sink-mute alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo toggle && \
pactl set-sink-mute bluez_sink.00_09_A7_24_41_14.a2dp_sink toggle

# fn keys increase volume
bindsym XF86AudioRaiseVolume exec \
pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo +5% && \
pactl set-sink-volume alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo +5% && \
pactl set-sink-volume bluez_sink.00_09_A7_24_41_14.a2dp_sink +5%

# fn keys decrease volume
bindsym XF86AudioLowerVolume exec \
pactl set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo -5% && \
pactl set-sink-volume alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo -5% && \
pactl set-sink-volume bluez_sink.00_09_A7_24_41_14.a2dp_sink -5%

# fn keys mute
bindsym XF86AudioMute exec \
pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle && \
pactl set-sink-mute alsa_output.usb-Logitech_Logitech_G930_Headset-00.analog-stereo toggle && \
pactl set-sink-mute bluez_sink.00_09_A7_24_41_14.a2dp_sink toggle
