# Execute cmd to configure git. 
# rm -rf ~/.gitconfig && ln -s ~/repos/configs/.gitconfig ~/.gitconfig

[user]
	name = Magnus Kir√∏
	email = magnuskiro@gmail.com
[credential]
	helper = cache --timeout=3600
[push]
    default = upstream
[color]
    status = auto
    branch = auto
    ui = always
[core]
    editor = vim
	autocrlf = input
[alias]
	pl = pull
	ps = push
    st = status
    cm = commit -m
	ca = commit -am
    br = branch
    co = checkout
    df = diff
    lg = log -p
    who = shortlog -s --
